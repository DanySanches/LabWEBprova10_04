
<div class="container mt-4">
  <div class="row">
    <div class="col-lg-12">
      <h1>Tela de Consulta</h1>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="container text-center overflow-auto">
        <div class="row align-items-start d-flex flex-wrap opt">
          
          <div class="col-sm text-center">Nome</div>
          <div class="col-sm text-center">Telefone</div>
          <div class="col-sm text-center">Ações</div>
         
        </div>
        <hr>

        {{#each post}}
        {{#dataValues}}
        <div class="row align-items-center d-flex flex-wrap">
          <div class="col-sm text-center">{{nome}}</div>
          <div class="col-sm text-center">{{tel}}</div>
          <div class="col-sm text-center">
            <div class="btn-group" role="group"> 
              <button type="button" class="btn btn-primary btn-sm mt-2"><a href="/atualizar/{{id}}" style="color:inherit">Editar</a></button>
              <button type="button" class="btn btn-danger btn-sm ms-2 mt-2"><a href="/excluir/{{id}}" style="color:inherit">Excluir</a></button>
            </div>
          </div>   
        </div>
        <hr>
        {{/dataValues}}
        {{/each}}
      </div>  
    </div>
  </div>
</div>

<style>
    .opt {
      font-size: 22px;
      font-weight: bold;
    }
</style>